if {${name} ne ${subport}} {
    test.run    yes
    test.env    PYTHONPATH=${worksrcpath}/build/lib \
                PYTEST_PLUGINS=pytest_timeout

    pre-test {
        # See https://docs.pytest.org/en/stable/pythonpath.html
        delete ${test.dir}/${test.target}/__init__.py
    }
}
