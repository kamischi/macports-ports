    depends_lib-append      port:py${python.version}-attrs \
                            port:py${python.version}-idna \
                            port:py${python.version}-outcome \
                            port:py${python.version}-sniffio \
                            port:py${python.version}-sortedcontainers

    if {${python.version} < 311} {
